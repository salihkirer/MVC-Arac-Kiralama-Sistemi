@model Rent_a_Car.ViewModel.uyeModel
<div class="section section-grey" style="margin-bottom:180px;">
    <div class="container" style="margin-top:50px;">
        <div class="row">
            <div class="col-md-3">
                <div class="section-title">
                    <h4 class="title">Giriş</h4>
                </div>
                @using (Html.BeginForm("OturumAc", "Home", new { returnUrl = ViewBag.returnUrl }, FormMethod.Post))
                {

                    @Html.LabelFor(m => m.KullaniciAdi)
                    @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control" })
                    <br />
                    @Html.ValidationMessageFor(m => m.KullaniciAdi, null, new { @class = "alert-danger" })
                    <br />
                    @Html.LabelFor(m => m.Sifre)
                    @Html.PasswordFor(m => m.Sifre, new { @class = "form-control" })
                    <br />
                                @Html.ValidationMessageFor(m => m.Sifre, null, new { @class = "alert-danger" })
                                <br />
                                <input type="submit" value="Giriş" class="btn" />
                                @Html.ActionLink("Yeni Üye", "UyeOl", null, new { @class = "btn btn-primary" })
                }
                <br />
                @if (ViewBag.hata != null)
            {
                    <div class="alert alert-danger">@ViewBag.hata</div>
                }
            </div>
        </div>

    </div>
    </div>