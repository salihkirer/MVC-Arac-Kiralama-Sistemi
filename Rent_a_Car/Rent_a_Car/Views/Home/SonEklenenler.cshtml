@model IEnumerable<Rent_a_Car.Models.Araba>
<div class="section section-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h4 class="title">Son Eklenenler</h4>
                    <div class="pull-right">
                        <div class="product-slick-dots-2 custom-dots">
                        </div>
                    </div>
                </div>
            </div>
@{Html.RenderAction("UcuzArac", "Home"); }
            <div class="col-md-9 col-sm-6 col-xs-6">
                <div class="row">
                    <div id="product-slick-2" class="product-slick">
                        @foreach (var araba in Model)
                        {
                            <div class="product product-single">
                                <div class="product-thumb">
                                    @Html.ActionLink("Detay", "ArabaDetay", new { id = araba.arabaId }, new { @class = "main-btn quick-view" })
                                    <img src="~/Content/carFoto/@araba.foto">
                                </div>
                                <div align="center">
                                    <div class="product-body">
                                        <h3 class="product-price">Günlük @araba.fiyat ₺</h3>
                                        <h2 class="product-name"> @araba.arabaMarka @araba.arabaModeli</h2>
                                        <div class="product-btns">
                                            @Html.ActionLink("Kirala", "ArabaKirala", new { id = araba.arabaId }, new { @class = "primary-btn add-to-cart" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


